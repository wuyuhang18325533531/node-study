{
  "compilerOptions": {
    "lib": ["es2015", "dom", "es2016", "es2017", "esnext"],
    "sourceMap": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "experimentalDecorators": true,
    "jsx": "preserve",
    "allowJs": true,
    "jsxFactory": "h",
    "esModuleInterop": true,
    "typeRoots": ["./shims", "../node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@C/*": ["components/*"]
    }
  },
  "exclude": ["./router", "./utils/import.js"],
  "include": ["./**/*.ts", "./**/*.vue", "./**/*.tsx"]
}
